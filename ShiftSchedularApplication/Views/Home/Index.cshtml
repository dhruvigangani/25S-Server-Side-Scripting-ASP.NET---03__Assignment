@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="text-center mb-5">
                <h1 class="display-4 text-primary">🕐 ShiftSchedularApplication</h1>
                <p class="lead">Comprehensive shift management system for modern businesses</p>
                <hr class="my-4">
            </div>

            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-calendar-alt fa-3x text-primary mb-3"></i>
                            <h3 class="h5">Shift Management</h3>
                            <p class="text-muted">Create, edit, and manage employee shifts with ease. Track shift status, swaps, and absences.</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-clock fa-3x text-success mb-3"></i>
                            <h3 class="h5">Time Tracking</h3>
                            <p class="text-muted">Accurate punch-in/out functionality for precise work hour tracking and payroll calculations.</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-users fa-3x text-info mb-3"></i>
                            <h3 class="h5">Availability Management</h3>
                            <p class="text-muted">Set employee availability preferences by day and time for optimal scheduling.</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-dollar-sign fa-3x text-warning mb-3"></i>
                            <h3 class="h5">Payroll Integration</h3>
                            <p class="text-muted">Automatic pay stub generation based on hours worked and hourly rates.</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-5">
                <div class="col-lg-8 mx-auto">
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <h3 class="h4 mb-3">Ready to Get Started?</h3>
                            <p class="mb-4">Join thousands of businesses using our shift management system to streamline their operations.</p>
                            <div class="d-grid gap-2 d-md-block">
                                <a href="/Identity/Account/Register" class="btn btn-primary btn-lg me-md-2">
                                    <i class="fas fa-user-plus"></i> Register Now
                                </a>
                                <a href="/Identity/Account/Login" class="btn btn-outline-primary btn-lg">
                                    <i class="fas fa-sign-in-alt"></i> Login
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-5">
                <div class="col-md-4 text-center mb-4">
                    <i class="fas fa-shield-alt fa-2x text-success mb-3"></i>
                    <h4 class="h6">Secure Authentication</h4>
                    <p class="text-muted small">Google OAuth and local authentication with industry-standard security.</p>
                </div>

                <div class="col-md-4 text-center mb-4">
                    <i class="fas fa-mobile-alt fa-2x text-info mb-3"></i>
                    <h4 class="h6">Responsive Design</h4>
                    <p class="text-muted small">Works seamlessly on desktop, tablet, and mobile devices.</p>
                </div>

                <div class="col-md-4 text-center mb-4">
                    <i class="fas fa-cloud fa-2x text-primary mb-3"></i>
                    <h4 class="h6">Cloud Hosted</h4>
                    <p class="text-muted small">Reliable cloud hosting with automatic backups and 99.9% uptime.</p>
                </div>
            </div>
        </div>
    </div>
</div>
