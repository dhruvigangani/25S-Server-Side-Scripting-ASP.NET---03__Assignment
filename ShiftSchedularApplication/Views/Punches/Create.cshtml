@model ShiftSchedularApplication.Models.Punch

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Punch</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!-- EmployeeId will be set automatically to current user -->
            <input type="hidden" asp-for="EmployeeId" value="@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value" />
            <div class="form-group">
                <label asp-for="PunchInTime" class="control-label"></label>
                <input asp-for="PunchInTime" class="form-control" type="datetime-local" />
                <span asp-validation-for="PunchInTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PunchOutTime" class="control-label"></label>
                <input asp-for="PunchOutTime" class="form-control" type="datetime-local" />
                <span asp-validation-for="PunchOutTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
