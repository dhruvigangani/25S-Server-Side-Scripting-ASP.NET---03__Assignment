@model IEnumerable<ShiftSchedularApplication.Models.Availability>

@{
    ViewData["Title"] = "Index";
}

<h1>Availability</h1>

@if (User?.Identity?.IsAuthenticated == true)
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Day)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartAvailability)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndAvailability)
            </th>
            @if (User?.Identity?.IsAuthenticated == true)
            {
                <th></th> <!-- Extra column for Edit/Delete -->
            }
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Day)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartAvailability)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndAvailability)
            </td>
            @if (User?.Identity?.IsAuthenticated == true)
            {
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            }
        </tr>
}
    </tbody>
</table>