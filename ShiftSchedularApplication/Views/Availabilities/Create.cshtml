@model ShiftSchedularApplication.Models.Availability

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Availability</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!-- EmployeeId will be set automatically to current user -->
            <input type="hidden" asp-for="EmployeeId" value="@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value" />
            <div class="form-group">
                <label asp-for="Day" class="control-label"></label>
                <select asp-for="Day" class="form-control" asp-items="@(ViewData["Day"] as SelectList)"></select>
                <span asp-validation-for="Day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartAvailability" class="control-label"></label>
                <input asp-for="StartAvailability" type="time" class="form-control" />
                <span asp-validation-for="StartAvailability" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndAvailability" class="control-label"></label>
                <input asp-for="EndAvailability" type="time" class="form-control" />
                <span asp-validation-for="EndAvailability" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
