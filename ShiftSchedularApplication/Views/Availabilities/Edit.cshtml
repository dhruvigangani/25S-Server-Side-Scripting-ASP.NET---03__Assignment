@model ShiftSchedularApplication.Models.Availability

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Availability</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <input asp-for="EmployeeId" class="form-control" readonly />
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Day" class="control-label"></label>
                <select asp-for="Day" class="form-control" asp-items="@(ViewData["Day"] as SelectList)"></select>
                <span asp-validation-for="Day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartAvailability" class="control-label"></label>
                <input asp-for="StartAvailability" class="form-control" type="time" required />
                <span asp-validation-for="StartAvailability" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndAvailability" class="control-label"></label>
                <input asp-for="EndAvailability" class="form-control" type="time" required />
                <span asp-validation-for="EndAvailability" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
